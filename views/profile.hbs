<div class="profile-background">
    <div class="container">
        {{#if isApproved}}
            <div class="container">
                <a href="/" class="conference-back-btn"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i></a>       
                <div class="profile-image">        
                    <img class="handled-profile-picture" src="../images/{{{user_pic}}}" alt="" /><a href="/users/editprofile" class="edit-ico"><i class="far fa-edit"></i></a>
                </div>    
                <div class="profile-detail">
                    <h2 class="profile-detail__title">{{user.username}}</h2><a href="/users/editprofile" class="edit-ico"><i class="far fa-edit"></i></a>
                    <p class="profile-detail__description">{{{user_description}}} </p>
                </div>
            </div>
        {{else}}
            <div class="header">        
      <img src="../images/logo-new.svg" alt="" />
    </div> 
     <div class="container" style="padding: 0 20px;">
        <div class="header">        
            <img src="../images/logo-new.svg" alt="" />
        </div> 
        <h2 class="not-approved-text">Thank you for signing up. Your join request has been sent. Please check back soon or contact one the admins to add you as a member.</h2>
        <a href="/users/logout" class="form-group__login-btn background-color--blue"><i class="fas fa-sign-out-alt"></i> Logout</a>
        <button type="button" class="refresh-btn form-group__login-btn" onClick="Refresh()">Refresh</button>
    </div>
        {{/if}}
    </div>
</div>
