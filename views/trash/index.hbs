<div class="gradient-background">
    {{#if isApproved}}
        <div class="container">
            {{> header }}
            {{#if user}}
                    {{#each posts}}
                        <div class="trash-block" id="{{post_id}}">
                            {{#each trash}}
                                <div class="trash-block__author"> {{this.author}}</div>
                                    {{#if postimage}}
                                        <div class="trash-block__featured-image">
                                            <img src="/images/{{this.postimage}}" />
                                        </div>
                                    {{/if}}
                                <div class="trash-block__description">{{this.description}}</div>  
                                <button class="trash-block__undo-btn">Undo</button>
                                <button class="trash-block__delete-btn">Delete</button>
                            {{/each}}
                        </div>        
                    {{/each}}   
                    {{else}}
                    <div class="header">        
                      <img src="../images/logo-new.svg" alt="" />
                    </div> 
                    <h2 class="not-approved-text">You are not authorised to see this page</h2>
            {{/if}}
        </div>
    {{else}}
        <div class="header">        
          <img src="../images/logo-new.svg" alt="" />
        </div> 
        <h2 class="not-approved-text">Admin has not approved you as Connect19 user yet</h2>
    {{/if}}
</div>